{{#if products}}
    <div class ="row">
        <div class= "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group-item">
                {{#each products}} 
                    <li class="list-group-item">
                        <span class = "badge">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class = "label label-success">₹{{this.price}}</span>
                        <div class = "btn-group">
                            <button class = "btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown" style="color: black;">
                                <strong>Action</strong>
                            </button>
                            <ul class = "dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href = "/reduce/{{this.item._id}}" type="button">Reduce by 1</a></li>
                                <li><a class="dropdown-item" href = "/remove/{{this.item._id}}">Remove all</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class ="row">
        <div class= "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total : ₹{{totalPrice}}  </strong>
        </div>
    </div>
    {{!-- horizontal line --}}
    <hr> 
    <div class ="row">
        <div class= "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type = "button" class="btn btn-success"><strong style="padding-right: 5px; color:black">Checkout</strong></a>
        </div>
    </div>
    <br>
    <br>
{{else}}
    <div class ="row">
        <div class= "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items yet</h2>
        </div>
    </div>
{{/if}}